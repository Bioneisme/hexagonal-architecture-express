{
  "compilerOptions": {
    "module": "CommonJS",
    "incremental": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
//    "sourceMap": true,
    "skipLibCheck": true,
//    "declaration": true,
    "removeComments": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "src",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
